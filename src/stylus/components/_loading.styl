.loading
  align-items center
  bottom 0
  display flex
  height 100%
  justify-content center
  left 0
  opacity 0
  visibility hidden
  position fixed
  transition-property opacity, visibility
  transition-duration .3s
  transition-timing-function linear
  width 100%

  &.-active
    opacity 1
    visibility visible

  .overlay
    background-color #0000007d
    position absolute
    width 100%
    height 100%
    z-index 1